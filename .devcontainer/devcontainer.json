{
  "name": "SunnyStudy Dev",
  "image": "node:latest",
  "workspaceFolder": "/app",
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind",
    "source=sunny-study_node_modules,target=/app/node_modules,type=volume"
  ],
  "containerEnv": {
    "CHOKIDAR_USEPOLLING": "1",
    "CHOKIDAR_INTERVAL": "200"
  },
  "forwardPorts": [],
  "remoteUser": "root",
  "runArgs": ["--name", "sunny-study-dev"],
  "postStartCommand": "sh -lc 'chmod -R 777 /app || true && su -s /bin/sh node -c \"cd /app && npm install && npm run watch\"'"
}