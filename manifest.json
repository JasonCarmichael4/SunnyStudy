{
  "manifest_version": 3,
  "name": "SunnyStudy",
  "description": "A study helper Chrome extension built with React and Vite.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },

  "side_panel": {
    "default_path": "sidePanel/index.html"
  },

  "background": {
    "service_worker": "scripts/background.ts",
    "type": "module"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}